        .dropdown-menu {
            display: none; /* Hide dropdown by default */
            position: absolute;
            top: 100%; /* Position dropdown below the icon */
            left: 0;
            width: 20px; /* Set a fixed width for the dropdown */
            background-color: #fff; /* Background color */
            border: 1px solid #ccc; /* Border */
            z-index: 1000; /* Ensure dropdown is above other elements */
            padding: 0;
        }

            .dropdown-menu a {
                display: block;
                padding: 2px 2px; /* Reduce padding for smaller menu items */
                text-decoration: none;
                color: #333; /* Text color */
                font-size: 14px; /* Optional: adjust font size for smaller items */
            }

                .dropdown-menu a:hover {
                    background-color: #f1f1f1; /* Background color on hover */
                }

        /* Show dropdown on hover */
        .widget-header:hover .dropdown-menu {
            display: block;
        }


        /* Add some basic styling */
        .timer {
            font-family: Arial, sans-serif;
            display: flex;
            gap: 10px;
            font-size: 18px;
        }

            .timer div {
                text-align: center;
            }

            .timer .num {
                font-size: 24px;
                display: block;
            }
    </style>
